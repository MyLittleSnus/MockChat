@using MockChat.Core

@model MockChat.Web.Models.ViewModels.ChatListViewModel

<!DOCTYPE html>
<style>
    #chatsList {
        display: flex;
        flex-direction: column;
        max-width: 400px;
        margin: auto;
    }

    .chat-bubble {
        background-color: #e0e0e0;
        padding: 10px;
        margin: 5px;
        border-radius: 10px;
        word-wrap: break-word;
    }
</style>

<body>
<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="inviteToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" id="inviteToastText"></div>
  </div>
</div>

<h4>Mock Chat!</h4>

<button id="createChatButton">Create chat!</button>

<div id="chatsList">
    @foreach (Chat chat in Model.Chats)
    {
        <button class="chat-bubble" onclick="navigateToChat('@chat.Name')">
            <strong>@chat.Name</strong>
        </button>
    }
</div>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
    <script src="/js/chatList.js" type="text/javascript"></script>
</body>